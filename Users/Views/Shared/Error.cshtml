@model IEnumerable<string>
@{
    ViewBag.Title = "Помилка";
}
<div class="alert alert-danger">
    @switch (Model.Count())
    {
        case 0:
            @: Шось не те.. Спробуйте ще раз!
            break;
        case 1:
            @Model.First();
            break;
        default:
            @: Помилки:
            <ul>
                @foreach (string error in Model)
                {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>
@Html.ActionLink("OK", "Index", "Home", null, new { @class = "btn btn-default" })


